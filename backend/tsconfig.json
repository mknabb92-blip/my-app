{
  "compilerOptions": {
    "rootDir": "./",
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true
  },
  "include": ["./**/*.ts"]
}


